                                #vistaPreviaImagen
                                {
                                    max-width: 100%;
                                    justify-content: center;
                                    display: flex;
                                }

                                #vistaPreviaImagen img
                                {
                                    max-width: 50%;
                                    margin-top: 20px;
                                    margin-bottom: 20px;
                                }
                            </style>

