                                <label asp-for="NuevoProductos.Categoria" class="control-label">Categoria</label>
                                <select asp-for="NuevoProductos.Categoria"  class="form-control">
                                    <option value="">Seleccionar Categoria</option>
                                    <option value="Zapatilla">Zapatilla</option>
                                    <option value="Botín">Botín</option>
                                    <option value="Estileto">Estileto</option>
                                    <option value="Mocasín">Mocasín</option>
                                    <option value="Bota">Bota</option>
                                    <option value="Alpargata">Alpargata</option>
                                    <option value="Oxford">Oxford</option>
