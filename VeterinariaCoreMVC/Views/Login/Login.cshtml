@{
    ViewData["Title"] = "Login";
}

<html lang="es">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VeterinariaCoreMVC.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/400743649d.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body style="background-image: url('/Imagenes/fondo.png');">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4 mt-5 pt-5">
                <div class="card px-4 py-5 border-0" style="border-radius: 1rem; background-color: rgba(255, 255, 255, 0.7); border-radius: 10px;">
                    <div class="card-body">
                        <form asp-controller="Login" asp-action="Login" method="post">
                            <div class="mb-3">
                                <a class="navbar-brand  d-block text-center">
                                    <img src="@Url.Content("/Imagenes/logo.png")" alt="Flowersshoes" style="height:50px" />
                                </a>
                                <h6 class="text-center mb-5">Login</h6>
                                <div class="input-group mb-3">
                                    <span class="input-group-text">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                    @Html.TextBox("email", "", new { placeholder = "Ingresa el email", @class = "form-control" })
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="input-group mb-3">
                                    <span class="input-group-text">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                    @Html.TextBox("pass", "", new { placeholder = "Ingresa el password", @class = "form-control", type = "password" })
                                </div>
                            </div>
                            <div class="d-grid gap-2 mt-5">
                                <button type="submit" class="btn bgRosa">Iniciar Sesión</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>